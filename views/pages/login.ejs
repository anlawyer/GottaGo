<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
    <style>
      .columns {
        margin: 0;
      }

      .column {
        padding-bottom: 0;
        padding-top: 0;
        padding-left: 40px;
        padding-right: 40px;
      }

      .input {
        margin-bottom: 10px;
      }

      .button {
        margin-top: 10px;
        padding: 10px 60px;
      }
      
      input.input {
        max-width: 500px;
      }

      #title {
        padding: 40px;
      }

      h1 {
        font-size: 2em;
      }

    </style>
  </head>

  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="columns">
      <div id="title" class="column has-text-centered">
        <div class="">
          <h1>WELCOME BACK!</h1>
        </div>
      </div>
    </div>
   
    <div class="columns">
      <div class="column">
        <div class="field">
          <label class="label">Username</label>
          <div class="control">
            <input class="input" type="text" placeholder="your username">
          </div>
        </div>
      </div>
    </div>

    <div class="columns">
      <div class="column">
        <div class="field">
          <label class="label">Password</label>
          <div class="control">
            <input class="input" type="password" placeholder="enter password">
          </div>
        </div>
      </div>
    </div>

    <div class="columns">
      <div class="column">
        <div class="field">
          <div id="sumbit" class="control">
            <a class="button" type="submit">Log in</a>
          </div>
        </div>
      </div>
    </div>
    </div>

    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
