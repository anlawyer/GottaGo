<!-- User's Gotta Go! account page -->
<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
      <style>
        .columns {
          margin: 0;
        }

        .column {
          padding-top: 0;
          padding-bottom: 0;
          padding-left: 40px;
          padding-right: 40px;
        }

        .input {
          margin-bottom: 10px;
        }

        .button {
          margin-top: 10px;
          padding: 10px 60px;
        }
        
        input.input {
          max-width: 400px;
        }

        #title {
          padding: 20px;
        }

        h1 {
          font-size: 2em;
        }

      </style>
  </header>
    
    <div class="columns">
      <div id="title" class="column has-text-centered">
        <div class="">
          <h1>HI, <span>USER</span></h1>
        </div>
      </div>
    </div>

    <div class="columns">
      <div class="column">
        <div class="">
          <h3>ACCOUNT SETTINGS</h3>
        </div>
      </div>
    </div>
    
    <div class="columns">
      <div class="column">
        <div class="field">
          <label class="label">Username</label>
          <div class="control">
            <input id="username" class="input" type="text" placeholder="your username">
          </div>
        </div>
      </div>
    </div>
    
    <div class="columns">
      <div class="column">
        <div class="field">
          <label class="label">Email</label>
          <div class="control">
            <input id="email" class="input" type="email" placeholder="your email">
          </div>
        </div>
      </div>
    </div>

    <div class="columns">
      <div class="column">
        <div class="field">
          <label class="label">Current password</label>
          <div class="control">
            <input id="current-password" class="input" type="password" placeholder="enter password">
          </div>
          <label class="label">New password</label>
          <div class="control">
            <input id="new-password" class="input" type="password" placeholder="enter password">
          </div>
          <label class="label">Re-type new password</label>
          <div class="control">
            <input id="confirm-new-password" class="input" type="password" placeholder="confirm password">
          </div>
        </div>
      </div>
    </div>

    <div class="columns">
      <div class="column">
        <div class="field">
          <div id="sumbit" class="control">
            <a class="button" type="submit" method="PUT">Save</a>
          </div>
        </div>
      </div>
    </div>

    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
