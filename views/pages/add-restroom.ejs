<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
      <style>
        .columns {
          margin: 0;
        }

        .column {
          padding-top: 0;
          padding-bottom: 0;
          padding-left: 40px;
          padding-right: 40px;
        }

        .input {
          margin-bottom: 10px;
        }

        .button {
          margin-top: 10px;
          padding: 10px 60px;
        }
        
        input.input {
          max-width: 400px;
        }

        textarea.textarea {
          max-width: 100px;
        }

        #title {
          padding: 20px;
        }

        h1 {
          font-size: 2em;
        }

      </style>
    </header>
    
    <div class="columns">
      <div id="title" class="column has-text-centered">
        <div class="">
          <h1>ADD NEW LOCATION</h1>
        </div>
      </div>
    </div>
    
    <div class="columns">
      <div class="column">
        <div class="field">
          <label class="label">LOCATION NAME</label>
          <div class="control">
            <input class="input" type="text" placeholder="eg. park, cafe">
          </div>
        </div>
      </div>
    </div>
    
    <div class="columns">
      <div class="column">
        <div class="field">
          <label class="label">ADDRESS</label>
          <div class="control">
            <input class="input" type="email" placeholder="eg. 1995 University Ave, Berkeley, CA, 94704">
          </div>
        </div>
      </div>
    </div>

    <div class="columns">
      <div class="column">
        <div class="field">
          <div class="control">
            <label class="label">SELECT CATEGORY</label>
            <label class="radio">
              <input type="radio" name="question">
              Gas Station
            </label>
            <label class="radio">
              <input type="radio" name="question">
              Restaurant
            </label>
            <label class="radio">
              <input type="radio" name="question">
              Other
            </label>
          </div>
        </div>
      </div>
    </div>

    <div class="columns">
      <div class="column">
        <div class="field">
          <label class="label">ADD COMMENT</label>
          <p>optional</p>
          <div class="control">
            <textarea class="textarea" placeholder="Textarea"></textarea>
          </div>
        </div>
      </div>
    </div>

    <div class="columns">
      <div class="column">
        <div class="field">
          <div id="sumbit" class="control">
            <a class="button" type="submit">SUBMIT</a>
          </div>
        </div>
      </div>
    </div>

    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
